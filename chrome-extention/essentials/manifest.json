{
    "manifest_version": 3,
    "name": "Job-Ops Autofill",
    "version": "0.1.0",
    "description": "Drafts tailored answers and emits submit events to Job Sync.",
    "action": { "default_popup": "popup.html" },
    "options_page": "options.html",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": { "service_worker": "background.js" },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ]
  }