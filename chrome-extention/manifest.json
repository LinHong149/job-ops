{
    "manifest_version": 3,
    "name": "LLM Autofill for Job Apps",
    "version": "0.1.0",
    "description": "Draft tailored answers to job application questions using your resume and the job description.",
    "action": { "default_popup": "popup.html" },
    "options_page": "options.html",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["https://*/*", "http://*/*"],
    "background": { "service_worker": "background.js" },
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ]
  }